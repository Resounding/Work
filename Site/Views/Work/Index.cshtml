@model Site.Models.CrewListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Title</title>
    <link rel="stylesheet" type="text/css" href="~/css/modern.css" />
    <link rel="stylesheet" type="text/css" href="~/css/modern-responsive.css" />
    <link rel="stylesheet" type="text/css" href="~/css/app.css" />

    <script type="text/javascript" src="/js/jquery-1.9.0.js"></script>
</head>
<body class="crew-list">
    <div class="page">
        <div class="page-header">
            <div class="page-header-content">
                <h1>@Model.Title</h1>
            </div>
        </div>
        <div class="page-region">
            <div class="page-region-content">
                
                @Html.Partial("~/Views/Work/DisplayTemplates/CrewListHeader.cshtml", Model)
                
                <section class="day">
                    <div class="crew-day">&nbsp;</div>
                    @foreach (var day in Model.Days) {
                        @Html.Partial("~/Views/Work/DisplayTemplates/CrewListDayModel.cshtml", day);
                    }
                </section>

            </div>
        </div>
    </div>
    <script type="text/javascript">
    $(function() {
        var $window = $(window),
            $header = $('header'),
            top = $header.offset().top;
        window.setInterval(function() {
            if($window.scrollTop() > top) {
                $header.addClass('header-fixed');
            } else {
                $header.removeClass('header-fixed');
            }
        });
    });
    </script>
</body>
</html>
